<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_message_profile_image"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/chat_receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/chat_message_profile_image"
        android:background="@drawable/inputs_ediit_design"
        android:text="Receiver message"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/chat_sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_alignParentTop="@+id/chat_receiver_message_text"
        android:background="@drawable/black_border"
        android:text="Sender message"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"/>
</RelativeLayout>